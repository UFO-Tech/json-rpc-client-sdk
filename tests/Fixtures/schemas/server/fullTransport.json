{
    "openrpc": "1.3.2",
    "info": {
        "title": "Full Transport API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8084/api",
            "name": "Full Server",
            "x-ufo": {
                "transport": {
                    "sync": {
                        "scheme": "http",
                        "host": "localhost",
                        "port": 8084,
                        "path": "/api",
                        "method": "POST"
                    },
                    "rpc_async": {
                        "scheme": "amqp",
                        "user": "{user}",
                        "pass": "{pass}",
                        "host": "rabbit",
                        "port": 5672,
                        "path": "/queue/test"
                    }
                }
            }
        }
    ],
    "methods": [
        {
            "name": "test",
            "params": [],
            "result": {
                "name": "pong",
                "schema": { "type": "string" }
            }
        }
    ]
}