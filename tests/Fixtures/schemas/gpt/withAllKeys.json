{
    "openrpc": "1.3.2",
    "info": {
        "title": "Comprehensive OpenRPC Example",
        "version": "1.0.0",
        "description": "Документ демонструє всі можливі елементи специфікації OpenRPC 1.3.2",
        "termsOfService": "https://example.org/terms",
        "contact": {
            "name": "API Team",
            "url": "https://example.org/contact",
            "email": "api@example.org"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0"
        },
        "x-meta": "custom extension at root"
    },
    "servers": [
        {
            "name": "Production",
            "url": "https://api.example.org",
            "summary": "Main API endpoint",
            "description": "Server description *supports Markdown*",
            "variables": {
                "version": {
                    "default": "v1",
                    "enum": ["v1", "v2"],
                    "description": "API version"
                }
            }
        },
        {
            "name": "Local",
            "url": "http://localhost:9000"
        }
    ],
    "methods": [
        {
            "name": "getUser",
            "summary": "Get user by ID",
            "description": "Returns user object by its identifier.",
            "paramStructure": "by-name",
            "params": [
                {
                    "name": "id",
                    "required": true,
                    "schema": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "description": "User ID"
                },
                {
                    "name": "includeDetails",
                    "required": false,
                    "schema": { "type": "boolean" },
                    "description": "Whether to include extended profile"
                }
            ],
            "result": {
                "name": "user",
                "schema": {
                    "$ref": "#/components/schemas/User"
                }
            },
            "tags": [{ "name": "User" }],
            "errors": [
                {
                    "code": 404,
                    "message": "User not found",
                    "data": { "hint": "Check user ID" }
                }
            ],
            "examples": [
                {
                    "name": "basicExample",
                    "summary": "Example request and response",
                    "params": [
                        {
                            "name": "id",
                            "value": 1
                        }
                    ],
                    "result": {
                        "name": "user",
                        "value": { "id": 1, "name": "Alice" }
                    }
                }
            ],
            "links": [
                {
                    "name": "UserRepositories",
                    "summary": "Get repos by owner",
                    "method": "getRepositoriesByOwner",
                    "params": {
                        "username": "${result.name}"
                    },
                    "server": {
                        "name": "Alt",
                        "url": "https://alt.example.org"
                    }
                }
            ]
        },
        {
            "name": "createUser",
            "summary": "Create a new user",
            "paramStructure": "by-position",
            "params": [
                {
                    "name": "name",
                    "required": true,
                    "schema": { "type": "string" }
                },
                {
                    "name": "email",
                    "required": true,
                    "schema": { "type": "string", "format": "email" }
                }
            ],
            "result": {
                "name": "userId",
                "schema": { "type": "integer" }
            },
            "deprecated": false
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" },
                    "email": { "type": "string" }
                },
                "required": ["id", "name"]
            }
        },
        "contentDescriptors": {
            "UserIdParam": {
                "name": "id",
                "schema": { "type": "integer" },
                "required": true
            }
        },
        "examples": {
            "UserExample": {
                "name": "SampleUser",
                "summary": "Typical user entity",
                "value": { "id": 123, "name": "Bob" }
            }
        },
        "links": {
            "UserRepositories": {
                "name": "UserRepositories",
                "method": "getRepositoriesByOwner",
                "params": { "username": "${result.name}" }
            }
        },
        "errors": {
            "NotFound": { "code": 404, "message": "Not found" }
        },
        "examplePairings": {
            "GetUserExample": {
                "name": "GetUserExample",
                "params": [
                    { "name": "id", "value": 1 }
                ],
                "result": { "name": "user", "value": { "id": 1, "name": "Alice" } }
            }
        },
        "tags": {
            "User": {
                "name": "User",
                "summary": "Operations about users",
                "description": "Everything related to **User** entity"
            }
        }
    },
    "externalDocs": {
        "description": "Full specification of this API",
        "url": "https://docs.example.org/openrpc"
    }
}
